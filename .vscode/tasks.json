{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "(gdb) build",
			"command": "g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/*.cpp",
				"-o",
				"main.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: g++.exe"
		}
	]
}